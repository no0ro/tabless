<h1>Add a Tab</h1>
<br></br>

<!-- Create a New Tab Form -->
<form action="/tabs" method="post">

  <h4><label for="tab_name">Name:</label>
  <input type="text" id="tab_name" name="tab_name" required></h4>
  <br>

  <h4><label for="url">URL:</label>
  <input type="text" name="url" id="url" required></h4>
  <br>

  <h4><label for="notes">Notes:</label>
  <input type="text" name="notes" id="notes" required></h4>
  <br>
  <%if !@categories.empty? %>

  <h4><label for="category_name">Choose an Existing Category:</label>
  <input type="text" name="category_name" id="category_name"></h4>

      <% @categories.each do |category|%>
        <input type="hidden" id="hidden" name="tab[category_ids][]" value=" ">
        <input type="checkbox" id="<%=category.id%>" name="tab[category_ids][]" value="<%= category.id %>"> <%=category.name%></input>
      <%end %>

  <h4><label for="category_name">Add a Category:</label>
  <input type="text" name="category_name" id="category_name"></h4>

  <% end %>
  <br>

  <input type="submit" value="Submit">
</form>

<!-- Footer -->
<br>
<footer>
  <a href="/tabs">Home</a> || <a href="/notes">Notes Home</a> || <a href="/logout">Log Out</a>
</footer>
